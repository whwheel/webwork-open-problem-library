DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);
 
Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1,15,1);
$r = random(2,9,1);

$sqa = 0.999*($a**(1/$r));
Context()->flags->set( limits=>[-$sqa,$sqa] );

Context()->texStrings;
BEGIN_TEXT

Find the derivative of
$BR
 
\( f(x)=\sqrt{$a-x^{$r}} \)

$PAR
\( f'(x) = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;

ANS(Compute( "(1/2)*(-1)*$r*(x^($r-1))*($a - x^($r))^(-1/2)" )->cmp() );

$xr = ( $r == 2 ) ? 'x' : 'x^{' . ($r-1) . '}';
$r2 = ( $r/2 == int($r/2) ) ? $r/2 : "\frac{$r}{2}";
$r2 = '' if ( $r2 eq '1' );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ f'(x) = (1/2) (-1) ($r $xr) ($a - x^$r)^{-1/2} 
         = -$r2 $xr ($a - x^$r)^{-1/2}. \]

END_SOLUTION
Context()->normalStrings;


COMMENT('MathObject version');
ENDDOCUMENT();
