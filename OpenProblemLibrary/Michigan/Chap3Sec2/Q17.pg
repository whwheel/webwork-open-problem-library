DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);

Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,15,1);
$b = random(2,15,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of 
\( f(x) = x^{$a} + {$b}^x \).

$PAR
\( f'(x) = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( "$a*x^($a-1) + ln($b)*($b)^x" )->cmp() );

$xa = ( $a == 2 ) ? 'x' : 'x^{' . ($a-1) . '}';

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ f'(x) = $a $xa + \ln($b)\cdot $b^x \]
END_SOLUTION
Context()->normalStrings;


COMMENT('MathObject version');
ENDDOCUMENT();
