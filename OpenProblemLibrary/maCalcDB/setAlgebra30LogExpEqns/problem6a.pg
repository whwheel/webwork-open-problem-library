DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$A = random(3,9,2);
$B = random(2,4,1);
$C = random(-9,9,1);

while ($A==$C) {$C = random(-9,9,1);}

$ans = ($B**($C/$A));

BEGIN_TEXT;
Solve for \(x\):

\[ \log_{$B}\ x^{$A} = $C   \]

$BR \(x = \) \{ans_rule(20) \}
$BR
END_TEXT

ANS(num_cmp($ans));

