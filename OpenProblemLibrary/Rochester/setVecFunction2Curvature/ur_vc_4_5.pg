$ans = "(2*( $a*$b )**2)**.5/(( $b*sin(t)) **2 + 2*( $a*cos(t))**2 )**1.5 ";

BEGIN_TEXT
Find the curvature \( \kappa (t) \) of the curve \( \mathbf{r} (t) = \left( $a \sin t \right)
\mathbf{i} + \left( $a \sin t \right) \mathbf{j} + \left( $b \cos t \right) \mathbf{k} \)
$PAR
\{ans_rule(70)\}
END_TEXT

ANS(fun_cmp($ans, vars=>"t"));

