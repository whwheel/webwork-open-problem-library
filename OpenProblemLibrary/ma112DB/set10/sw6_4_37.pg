"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(3,5,1);
$b=random(3,5,1);

BEGIN_TEXT
Rewrite the expression 
\[
\log_2 x + $b \log_2 y -$a \log_2 z 
\]
as a single logarithm
\(\log_2 A\). Then the function
$BR
A= \{ans_rule(25) \}
$BR
END_TEXT

$ans1 = "x*y**$b/z**$a";

ANS(fun_cmp($ans1,var=>['x','y','z']));

