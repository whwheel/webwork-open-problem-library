);

TEXT(beginproblem());

############################
# Setup

$var1 = "S";
$var2 = "T";
@set1 = ("a","b","c","d");
@set2 = ("1","2","3");
$pretty1 = join(",",@set1);
$pretty2 = join(",",@set2);

@answer = union(~~@set1,~~@set2);
$prettyans = join(",",@answer);

$radio = new_multiple_choice();
$radio->qa("Determine \($var1\cup $var2\)","\(\lbrace $prettyans\rbrace\)");
$radio->extra("\(\lbrace\rbrace\)","\(\lbrace a,b,c,1,2,3\rbrace\)","\(\lbrace a,1,b,2,c,3\rbrace\)");

# takes parameters union(\@set1,\@set2)
# make sure sets being passed in have "string" elements, e.g. ("1","2","3") instead of (1,2,3)
# comparison will not work otherwise
# returns array
sub union {
	my $tmp1 = shift;
	my $tmp2 = shift;
	
	my @a = @{$tmp1};
	my @b = @{$tmp2};
	my @result = ();
	
	foreach my $i (@a) {
		push(@result,$i);
	}
	
	foreach my $i (0..scalar(@b)-1) {
		foreach my $j (0..scalar(@a)-1) {
			if ($b[$i] eq $a[$j]) {
				last;
			}
			if ($j == scalar(@a)-1) {
				push(@result,$b[$i]);
			}
		}
	}
	return @result;
}

