sub setCheck {
	my ($correct, $student, $anshash) = @_;
	my @tmp1 = @$correct;
	my @tmp2 = @$student;
	return (isEqual(~~@tmp1,~~@tmp2));
}

# takes parameters cartesianDouble(\@set1,\@set2)
# returns array
sub cartesianDouble {
	my $ref1 = shift;
	my $ref2 = shift;
	
	my @seta = @$ref1;
	my @setb = @$ref2;
	
	my @result = ();
	foreach my $i (@seta) {
		foreach my $j (@setb) {
			push(@result,"($i,$j)");
		}
	}
	return @result;
}

# takes parameters difference(\@set1,\@set2)
# returns @set1 - @set2
# returns array
sub difference {
	my $tmp1 = shift;
	my $tmp2 = shift;
	
	my @a = @{$tmp1};
	my @b = @{$tmp2};
	my @result = ();
	
	foreach my $i (0..scalar(@a)-1) {
		foreach my $j (0..scalar(@b)-1) {
			if ($a[$i] eq $b[$j]) {
				last;
			}
			if ($j == scalar(@b)-1) {
				push(@result,$a[$i]);
			}
		}
	}
	return @result;
}

# takes parameters isEqual(\@set1,\@set2)
# uses difference function
# returns boolean (0,1)
sub isEqual {
	my $ref1 = shift;
	my $ref2 = shift;
	my @seta = @$ref1;
	my @setb = @$ref2;
	if (scalar @seta == scalar @setb) {
		return (scalar(difference(\@seta,\@setb)) == 0);
	}
	return 0;
}

