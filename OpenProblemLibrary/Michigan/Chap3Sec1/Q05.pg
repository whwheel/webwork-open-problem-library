DOCUMENT();
loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);

Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$pow = random(-29,-8,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of
\( y=x^{$pow} \).

$PAR
\( {dy\over dx} =\) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;

ANS(Compute( "$pow*x^($pow-1)" )->cmp() );

$p1 = $pow - 1;
Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[ {dy\over dx} = $pow x^{$pow - 1} = $pow x^{$p1} \]
END_SOLUTION
Context()->normalStrings;


COMMENT('MathObject version');
ENDDOCUMENT();
